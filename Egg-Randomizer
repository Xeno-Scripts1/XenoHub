-- ESP Logic (Restored)
local function createBillboardGui(egg, petName)
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "XenoPetESP"
    billboard.Size = UDim2.new(0, 100, 0, 40)
    billboard.Adornee = egg
    billboard.AlwaysOnTop = true
    billboard.StudsOffset = Vector3.new(0, 2, 0)
    billboard.Parent = egg

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.Text = petName
    label.TextStrokeTransparency = 0.5
    label.Parent = billboard
end

local petNames = {
    "Golden Bunny", "Mystic Dragon", "Ice Golem", "Shadow Kitty", "Fire Lizard",
    "Void Serpent", "Crystal Fox", "Pumpkin Bat", "Galaxy Pup", "Emerald Owl"
}

local function getRandomPetName()
    return petNames[math.random(1, #petNames)]
end

while true do
    task.wait(3)
    for _, egg in pairs(workspace:GetDescendants()) do
        if egg:IsA("Model") and egg:FindFirstChild("Egg") and not egg:FindFirstChild("XenoPetESP") then
            local petName = getRandomPetName()
            createBillboardGui(egg, petName)
        end
    end
end
