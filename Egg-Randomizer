-- Xeno's Egg Randomizer UI (Fresh Rebuild)

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "XenoEggRandomizerUI"
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = playerGui

-- Main UI Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 300)
mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 12)
uiCorner.Parent = mainFrame

-- Title Bar
local titleBar = Instance.new("TextLabel")
titleBar.Size = UDim2.new(1, 0, 0, 40)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
titleBar.BorderSizePixel = 0
titleBar.Text = "üîÑ Xeno's Egg Randomizer üîÑ"
titleBar.Font = Enum.Font.GothamBold
titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
titleBar.TextSize = 20
titleBar.Parent = mainFrame

-- Exit Button
local exitButton = Instance.new("TextButton")
exitButton.Text = "X"
exitButton.Size = UDim2.new(0, 30, 0, 30)
exitButton.Position = UDim2.new(1, -35, 0, 5)
exitButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
exitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
exitButton.Font = Enum.Font.GothamBold
exitButton.TextSize = 18
exitButton.Parent = mainFrame

exitButton.MouseEnter:Connect(function()
    exitButton.BackgroundColor3 = Color3.fromRGB(90, 90, 90)
end)
exitButton.MouseLeave:Connect(function()
    exitButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
end)
exitButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- Auto Reroll Button
local autoButton = Instance.new("TextButton")
autoButton.Size = UDim2.new(0.4, 0, 0, 40)
autoButton.Position = UDim2.new(0.05, 0, 0, 60)
autoButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
autoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
autoButton.Text = "Auto Reroll: OFF"
autoButton.Font = Enum.Font.GothamBold
autoButton.TextSize = 16
autoButton.Parent = mainFrame

-- Manual Reroll Button
local manualButton = Instance.new("TextButton")
manualButton.Size = UDim2.new(0.4, 0, 0, 40)
manualButton.Position = UDim2.new(0.55, 0, 0, 60)
manualButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
manualButton.TextColor3 = Color3.fromRGB(255, 255, 255)
manualButton.Text = "üé≤ Manual Reroll"
manualButton.Font = Enum.Font.GothamBold
manualButton.TextSize = 16
manualButton.Parent = mainFrame

-- Warning Label
local warningLabel = Instance.new("TextLabel")
warningLabel.Size = UDim2.new(1, -20, 0, 30)
warningLabel.Position = UDim2.new(0, 10, 0, 110)
warningLabel.BackgroundTransparency = 1
warningLabel.Text = "‚ö†Ô∏è WARNING: This is NOT a visual dupe! Use at your own risk!"
warningLabel.Font = Enum.Font.GothamSemibold
warningLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
warningLabel.TextSize = 14
warningLabel.TextWrapped = true
warningLabel.Parent = mainFrame

-- Footer
local footer = Instance.new("TextLabel")
footer.Size = UDim2.new(1, 0, 0, 30)
footer.Position = UDim2.new(0, 0, 1, -30)
footer.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
footer.BorderSizePixel = 0
footer.Text = "üëΩ Xeno's Script Hub"
footer.Font = Enum.Font.Gotham
footer.TextColor3 = Color3.fromRGB(120, 255, 120)
footer.TextSize = 14
footer.Parent = mainFrame

-- Auto Reroll Toggle Logic
local autoEnabled = false
autoButton.MouseButton1Click:Connect(function()
    autoEnabled = not autoEnabled
    if autoEnabled then
        autoButton.Text = "Auto Reroll: ON"
        autoButton.BackgroundColor3 = Color3.fromRGB(60, 120, 60)
    else
        autoButton.Text = "Auto Reroll: OFF"
        autoButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    end
end)

-- Manual Button Placeholder
manualButton.MouseButton1Click:Connect(function()
    print("Manual Reroll clicked")
end)
