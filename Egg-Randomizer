-- Auto Reroll Button
local autoButton = Instance.new("TextButton", mainFrame)
autoButton.Size = UDim2.new(0.8, 0, 0, 40)
autoButton.Position = UDim2.new(0.1, 0, 0.75, 0)
autoButton.Text = "üîÅ AUTO REROLL: OFF"
autoButton.Font = Enum.Font.GothamBold
autoButton.TextSize = 18
autoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
autoButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
autoButton.BorderSizePixel = 0

local btnCorner = Instance.new("UICorner", autoButton)
btnCorner.CornerRadius = UDim.new(0, 12)

local autoRerollEnabled = false
local autoRerollConnection
local rainbowConn

local function rollEgg()
	local eggNames = {}
	for name in pairs(eggs) do table.insert(eggNames, name) end
	local randomEgg = eggNames[math.random(1, #eggNames)]
	local pets = eggs[randomEgg]
	local petNames = {}
	for pet in pairs(pets) do table.insert(petNames, pet) end
	local randomPet = petNames[math.random(1, #petNames)]
	eggDisplay.Text = randomEgg
	hoverText.Text = "üéÅ " .. randomPet
end

autoButton.MouseButton1Click:Connect(function()
	if autoRerollEnabled then
		autoRerollEnabled = false
		autoButton.Text = "üîÅ AUTO REROLL: OFF"
		autoButton.TextColor3 = Color3.fromRGB(255, 255, 255)
		autoButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
		if autoRerollConnection then autoRerollConnection:Disconnect() end
		if rainbowConn then rainbowConn = nil end
	else
		autoRerollEnabled = true
		autoButton.Text = "üîÅ AUTO REROLL: ON"
		autoRerollConnection = game:GetService("RunService").Heartbeat:Connect(function()
			rollEgg()
			task.wait(1.5)
		end)
		rainbowConn = task.spawn(function()
			local hue = 0
			while autoRerollEnabled do
				hue = (hue + 0.003) % 1
				autoButton.TextColor3 = Color3.fromHSV(hue, 1, 1)
				autoButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
				task.wait(0.05)
			end
		end)
	end
end)
