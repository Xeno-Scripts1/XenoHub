-- // Load Rayfield UI Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- // Create Window
local Window = Rayfield:CreateWindow({
    Name = "⚡ Xeno's Hub",
    LoadingTitle = "⚡ Xeno's Pet Spawner",
    LoadingSubtitle = "⏳ Loading... | Please Wait",
    ConfigurationSaving = {
       Enabled = false
    },
    Discord = {
       Enabled = false
    },
    KeySystem = false
})

-- // Create Tab
local Tab = Window:CreateTab("⏳ Loading...")

-- // Section
local Section = Tab:CreateSection("Please Wait")

-- // Countdown Label
local CountdownLabel = Tab:CreateLabel("Hub will unlock in 1:30")

-- // Countdown Timer
local seconds = 90
task.spawn(function()
    while seconds > 0 do
        CountdownLabel:Set("Hub will unlock in " .. string.format("%d:%02d", math.floor(seconds/60), seconds % 60))
        task.wait(1)
        seconds -= 1
    end

    -- Close UI when done
    if Rayfield and Rayfield.Destroy then
        Rayfield:Destroy()
    end
end)
