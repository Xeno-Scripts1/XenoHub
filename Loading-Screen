local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Clean up any old versions
if playerGui:FindFirstChild("XenosPetSpawner") then
	playerGui.XenosPetSpawner:Destroy()
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "XenosPetSpawner"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Main UI container (centered)
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 500, 0, 350)
main.Position = UDim2.new(0.5, -250, 0.5, -175)
main.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
main.BorderSizePixel = 0
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.Parent = screenGui
main.ClipsDescendants = true
main.ZIndex = 10
main.BackgroundTransparency = 0
main.Name = "Main"

-- Rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 16)
corner.Parent = main

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 50)
title.BackgroundTransparency = 1
title.Text = "ðŸ§¬ Xeno's Pet Spawner"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.fromRGB(200, 255, 200)
title.TextSize = 26
title.Parent = main

-- Exit button
local exit = Instance.new("TextButton")
exit.Size = UDim2.new(0, 30, 0, 30)
exit.Position = UDim2.new(1, -40, 0, 10)
exit.Text = "â¨‰"
exit.Font = Enum.Font.Gotham
exit.TextSize = 20
exit.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
exit.TextColor3 = Color3.fromRGB(255, 255, 255)
exit.Parent = main
local exitCorner = Instance.new("UICorner", exit)
exitCorner.CornerRadius = UDim.new(0, 6)
exit.MouseButton1Click:Connect(function()
	screenGui:Destroy()
end)

-- Pet Dropdown
local petDropDown = Instance.new("TextButton")
petDropDown.Size = UDim2.new(0.8, 0, 0, 40)
petDropDown.Position = UDim2.new(0.1, 0, 0, 70)
petDropDown.Text = "Select Pet Type â–¼"
petDropDown.Font = Enum.Font.Gotham
petDropDown.TextSize = 20
petDropDown.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
petDropDown.TextColor3 = Color3.fromRGB(220, 220, 220)
petDropDown.Parent = main
Instance.new("UICorner", petDropDown).CornerRadius = UDim.new(0, 8)

-- Age Input
local ageInput = Instance.new("TextBox")
ageInput.Size = UDim2.new(0.37, 0, 0, 40)
ageInput.Position = UDim2.new(0.1, 0, 0, 130)
ageInput.PlaceholderText = "Enter Age"
ageInput.Text = ""
ageInput.Font = Enum.Font.Gotham
ageInput.TextSize = 18
ageInput.TextColor3 = Color3.fromRGB(255, 255, 255)
ageInput.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
ageInput.ClearTextOnFocus = false
ageInput.Parent = main
Instance.new("UICorner", ageInput).CornerRadius = UDim.new(0, 8)

-- Weight Input
local weightInput = ageInput:Clone()
weightInput.PlaceholderText = "Enter Weight"
weightInput.Position = UDim2.new(0.53, 0, 0, 130)
weightInput.Parent = main

-- Spawn Button
local spawnBtn = Instance.new("TextButton")
spawnBtn.Size = UDim2.new(0.8, 0, 0, 45)
spawnBtn.Position = UDim2.new(0.1, 0, 0, 200)
spawnBtn.Text = "Spawn Pet"
spawnBtn.Font = Enum.Font.GothamBold
spawnBtn.TextSize = 22
spawnBtn.BackgroundColor3 = Color3.fromRGB(80, 170, 80)
spawnBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
spawnBtn.Parent = main
Instance.new("UICorner", spawnBtn).CornerRadius = UDim.new(0, 10)

-- Hover effect
local function addHover(button)
	button.MouseEnter:Connect(function()
		button.BackgroundColor3 = button.BackgroundColor3:lerp(Color3.fromRGB(100, 200, 100), 0.2)
	end)
	button.MouseLeave:Connect(function()
		button.BackgroundColor3 = Color3.fromRGB(80, 170, 80)
	end)
end
addHover(spawnBtn)
