local Players = game:GetService("Players")
local PlayerGui = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Pet list from your previous message
local PetAssets = {
	"Kitsune",
	"Dragonfly",
	"Disco bee",
	"Mimic octopus",
	"Butterfly",
	"Raccoon",
	"T-Rex",
	"Fennec Fox",
	"Spinosaurus",
	"Chicken Zombie"
}

-- Clean old UI if exists
local existingUI = PlayerGui:FindFirstChild("XenoPetSpawnerUI")
if existingUI then existingUI:Destroy() end

-- Main ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "XenoPetSpawnerUI"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Main frame (80% transparent)
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 400, 0, 320)
mainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BackgroundTransparency = 0.8
mainFrame.Parent = screenGui

local mainUICorner = Instance.new("UICorner")
mainUICorner.CornerRadius = UDim.new(0, 20)
mainUICorner.Parent = mainFrame

-- Title Bar (visually distinct)
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 50)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(80, 170, 255)
titleBar.Parent = mainFrame

local titleBarCorner = Instance.new("UICorner")
titleBarCorner.CornerRadius = UDim.new(0, 20)
titleBarCorner.Parent = titleBar

-- Title Text
local titleText = Instance.new("TextLabel")
titleText.Size = UDim2.new(1, 0, 1, 0)
titleText.BackgroundTransparency = 1
titleText.Font = Enum.Font.GothamBlack
titleText.TextSize = 24
titleText.TextColor3 = Color3.fromRGB(255, 255, 255)
titleText.Text = "✨ Xeno's Pet Spawner ✨"
titleText.Parent = titleBar

-- Pet Selector Label
local petSelectorLabel = Instance.new("TextLabel")
petSelectorLabel.Size = UDim2.new(0.9, 0, 0, 25)
petSelectorLabel.Position = UDim2.new(0.05, 0, 0, 70)
petSelectorLabel.BackgroundTransparency = 1
petSelectorLabel.Font = Enum.Font.GothamSemibold
petSelectorLabel.TextSize = 18
petSelectorLabel.TextColor3 = Color3.fromRGB(230, 230, 230)
petSelectorLabel.Text = "Pet Selector"
petSelectorLabel.TextXAlignment = Enum.TextXAlignment.Left
petSelectorLabel.Parent = mainFrame

-- Dropdown Button
local dropdownBtn = Instance.new("TextButton")
dropdownBtn.Size = UDim2.new(0.9, 0, 0, 35)
dropdownBtn.Position = UDim2.new(0.05, 0, 0, 100)
dropdownBtn.BackgroundColor3 = Color3.fromRGB(50, 90, 160)
dropdownBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
dropdownBtn.Font = Enum.Font.GothamSemibold
dropdownBtn.TextSize = 16
dropdownBtn.Text = "Select a Pet"
dropdownBtn.Parent = mainFrame

local dropdownCorner = Instance.new("UICorner")
dropdownCorner.CornerRadius = UDim.new(0, 12)
dropdownCorner.Parent = dropdownBtn

-- Dropdown list container (hidden by default)
local dropdownList = Instance.new("Frame")
dropdownList.Size = UDim2.new(0.9, 0, 0, 0)
dropdownList.Position = UDim2.new(0.05, 0, 0, 135)
dropdownList.BackgroundColor3 = Color3.fromRGB(35, 75, 130)
dropdownList.ClipsDescendants = true
dropdownList.Parent = mainFrame

local dropdownListCorner = Instance.new("UICorner")
dropdownListCorner.CornerRadius = UDim.new(0, 12)
dropdownListCorner.Parent = dropdownList

local uiListLayout = Instance.new("UIListLayout")
uiListLayout.Padding = UDim.new(0, 3)
uiListLayout.Parent = dropdownList

local dropdownOpen = false
local selectedPet = nil

-- Populate dropdown with pet names
for _, petName in ipairs(PetAssets) do
	local option = Instance.new("TextButton")
	option.Size = UDim2.new(1, 0, 0, 30)
	option.BackgroundColor3 = Color3.fromRGB(60, 110, 190)
	option.TextColor3 = Color3.fromRGB(255, 255, 255)
	option.Font = Enum.Font.GothamSemibold
	option.TextSize = 16
	option.Text = petName
	option.Parent = dropdownList
	option.AutoButtonColor = true
	
	option.MouseButton1Click:Connect(function()
		dropdownBtn.Text = petName
		selectedPet = petName
		-- Close dropdown
		dropdownOpen = false
		dropdownList:TweenSize(UDim2.new(0.9, 0, 0, 0), "Out", "Quad", 0.3)
	end)
end

dropdownBtn.MouseButton1Click:Connect(function()
	if dropdownOpen then
		dropdownOpen = false
		dropdownList:TweenSize(UDim2.new(0.9, 0, 0, 0), "Out", "Quad", 0.3)
	else
		dropdownOpen = true
		local totalHeight = #PetAssets * 33 -- 30 height + 3 padding
		dropdownList:TweenSize(UDim2.new(0.9, 0, 0, totalHeight), "Out", "Quad", 0.3)
	end
end)

-- Weight label
local weightLabel = Instance.new("TextLabel")
weightLabel.Size = UDim2.new(0.45, 0, 0, 20)
weightLabel.Position = UDim2.new(0.05, 0, 0, 185)
weightLabel.BackgroundTransparency = 1
weightLabel.Font = Enum.Font.GothamSemibold
weightLabel.TextSize = 16
weightLabel.TextColor3 = Color3.fromRGB(230, 230, 230)
weightLabel.Text = "Weight"
weightLabel.TextXAlignment = Enum.TextXAlignment.Left
weightLabel.Parent = mainFrame

-- Age label
local ageLabel = Instance.new("TextLabel")
ageLabel.Size = UDim2.new(0.45, 0, 0, 20)
ageLabel.Position = UDim2.new(0.5, 0, 0, 185)
ageLabel.BackgroundTransparency = 1
ageLabel.Font = Enum.Font.GothamSemibold
ageLabel.TextSize = 16
ageLabel.TextColor3 = Color3.fromRGB(230, 230, 230)
ageLabel.Text = "Age"
ageLabel.TextXAlignment = Enum.TextXAlignment.Left
ageLabel.Parent = mainFrame

-- Weight TextBox
local weightBox = Instance.new("TextBox")
weightBox.Size = UDim2.new(0.45, 0, 0, 35)
weightBox.Position = UDim2.new(0.05, 0, 0, 210)
weightBox.PlaceholderText = "Enter weight"
weightBox.ClearTextOnFocus = false
weightBox.Text = ""
weightBox.TextColor3 = Color3.fromRGB(255, 255, 255)
weightBox.Font = Enum.Font.Gotham
weightBox.TextSize = 18
weightBox.BackgroundColor3 = Color3.fromRGB(40, 70, 120)
weightBox.Parent = mainFrame

local weightBoxCorner = Instance.new("UICorner")
weightBoxCorner.CornerRadius = UDim.new(0, 8)
weightBoxCorner.Parent = weightBox

-- Age TextBox
local ageBox = Instance.new("TextBox")
ageBox.Size = UDim2.new(0.45, 0, 0, 35)
ageBox.Position = UDim2.new(0.5, 0, 0, 210)
ageBox.PlaceholderText = "Enter age"
ageBox.ClearTextOnFocus = false
ageBox.Text = ""
ageBox.TextColor3 = Color3.fromRGB(255, 255, 255)
ageBox.Font = Enum.Font.Gotham
ageBox.TextSize = 18
ageBox.BackgroundColor3 = Color3.fromRGB(40, 70, 120)
ageBox.Parent = mainFrame

local ageBoxCorner = Instance.new("UICorner")
ageBoxCorner.CornerRadius = UDim.new(0, 8)
ageBoxCorner.Parent = ageBox

-- Footer
local footer = Instance.new("TextLabel")
footer.Size = UDim2.new(1, 0, 0, 30)
footer.Position = UDim2.new(0, 0, 1, -30)
footer.BackgroundTransparency = 1
footer.Font = Enum.Font.GothamSemibold
footer.TextSize = 16
footer.TextColor3 = Color3.fromRGB(170, 170, 170)
footer.Text = "Made by XenoScripts | Premium"
footer.TextXAlignment = Enum.TextXAlignment.Center
footer.Parent = mainFrame
