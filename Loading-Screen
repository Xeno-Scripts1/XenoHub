-- Xeno's Pet Spawner (UI + Logic)
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Cleanup old UI if exists
if PlayerGui:FindFirstChild("PetSpawnerUI") then
	PlayerGui.PetSpawnerUI:Destroy()
end

-- Dummy pet models in ReplicatedStorage
local AvailablePets = {
	"Butterfly", "Bunny", "Dragon", "Duck", "Penguin"
}

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PetSpawnerUI"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 420, 0, 300)
frame.Position = UDim2.new(0.5, 0, 0.5, 0)
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 16)
corner.Parent = frame

-- Title
local title = Instance.new("TextLabel")
title.Text = "üêæ Xeno's Pet Spawner üêæ"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 8)
title.Parent = frame

-- Dropdown Title
local dropdownLabel = Instance.new("TextLabel")
dropdownLabel.Text = "Select a Pet"
dropdownLabel.Font = Enum.Font.GothamSemibold
dropdownLabel.TextSize = 16
dropdownLabel.TextColor3 = Color3.fromRGB(220, 220, 220)
dropdownLabel.BackgroundTransparency = 1
dropdownLabel.Size = UDim2.new(0, 150, 0, 20)
dropdownLabel.Position = UDim2.new(0, 20, 0, 50)
dropdownLabel.Parent = frame

-- Dropdown
local dropdown = Instance.new("TextButton")
dropdown.Size = UDim2.new(0, 180, 0, 30)
dropdown.Position = UDim2.new(0, 20, 0, 70)
dropdown.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
dropdown.Font = Enum.Font.Gotham
dropdown.Text = "Choose Pet"
dropdown.TextSize = 14
dropdown.Parent = frame

local dropdownCorner = Instance.new("UICorner")
dropdownCorner.CornerRadius = UDim.new(0, 6)
dropdownCorner.Parent = dropdown

local dropdownList = Instance.new("Frame")
dropdownList.Visible = false
dropdownList.Position = UDim2.new(0, 0, 1, 0)
dropdownList.Size = UDim2.new(1, 0, 0, #AvailablePets * 24)
dropdownList.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
dropdownList.Parent = dropdown
dropdownList.ClipsDescendants = true

local listLayout = Instance.new("UIListLayout")
listLayout.Parent = dropdownList

for _, pet in ipairs(AvailablePets) do
	local option = Instance.new("TextButton")
	option.Text = pet
	option.Font = Enum.Font.Gotham
	option.TextSize = 14
	option.TextColor3 = Color3.fromRGB(255, 255, 255)
	option.BackgroundColor3 = Color3.fromRGB(70, 70, 90)
	option.Size = UDim2.new(1, 0, 0, 24)
	option.Parent = dropdownList

	option.MouseButton1Click:Connect(function()
		dropdown.Text = pet
		dropdownList.Visible = false
	end)
end

dropdown.MouseButton1Click:Connect(function()
	dropdownList.Visible = not dropdownList.Visible
end)

-- Age + Weight Labels
local ageLabel = Instance.new("TextLabel")
ageLabel.Text = "Age"
ageLabel.Font = Enum.Font.Gotham
ageLabel.TextSize = 14
ageLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
ageLabel.BackgroundTransparency = 1
ageLabel.Size = UDim2.new(0, 100, 0, 20)
ageLabel.Position = UDim2.new(0, 20, 0, 110)
ageLabel.Parent = frame

local weightLabel = Instance.new("TextLabel")
weightLabel.Text = "Weight"
weightLabel.Font = Enum.Font.Gotham
weightLabel.TextSize = 14
weightLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
weightLabel.BackgroundTransparency = 1
weightLabel.Size = UDim2.new(0, 100, 0, 20)
weightLabel.Position = UDim2.new(0, 140, 0, 110)
weightLabel.Parent = frame

-- Age Input
local ageInput = Instance.new("TextBox")
ageInput.Size = UDim2.new(0, 100, 0, 30)
ageInput.Position = UDim2.new(0, 20, 0, 130)
ageInput.PlaceholderText = "Enter Age"
ageInput.Text = ""
ageInput.Font = Enum.Font.Gotham
ageInput.TextSize = 14
ageInput.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
ageInput.TextColor3 = Color3.fromRGB(255, 255, 255)
ageInput.Parent = frame

local ageCorner = Instance.new("UICorner")
ageCorner.CornerRadius = UDim.new(0, 6)
ageCorner.Parent = ageInput

-- Weight Input
local weightInput = Instance.new("TextBox")
weightInput.Size = UDim2.new(0, 100, 0, 30)
weightInput.Position = UDim2.new(0, 140, 0, 130)
weightInput.PlaceholderText = "Enter Weight"
weightInput.Text = ""
weightInput.Font = Enum.Font.Gotham
weightInput.TextSize = 14
weightInput.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
weightInput.TextColor3 = Color3.fromRGB(255, 255, 255)
weightInput.Parent = frame

local weightCorner = Instance.new("UICorner")
weightCorner.CornerRadius = UDim.new(0, 6)
weightCorner.Parent = weightInput

-- Spawn Button
local spawnButton = Instance.new("TextButton")
spawnButton.Size = UDim2.new(0, 120, 0, 36)
spawnButton.Position = UDim2.new(0, 20, 0, 180)
spawnButton.Text = "Spawn Pet"
spawnButton.Font = Enum.Font.GothamBold
spawnButton.TextSize = 16
spawnButton.TextColor3 = Color3.fromRGB(255, 255, 255)
spawnButton.BackgroundColor3 = Color3.fromRGB(0, 170, 127)
spawnButton.Parent = frame

local spawnCorner = Instance.new("UICorner")
spawnCorner.CornerRadius = UDim.new(0, 8)
spawnCorner.Parent = spawnButton

-- Pet Spawn Logic
spawnButton.MouseButton1Click:Connect(function()
	local selectedPet = dropdown.Text
	if not table.find(AvailablePets, selectedPet) then return end

	local age = tonumber(ageInput.Text) or 1
	local weight = tonumber(weightInput.Text) or 1

	local model = ReplicatedStorage:FindFirstChild(selectedPet):Clone()
	if not model then return end

	local tool = Instance.new("Tool")
	tool.Name = selectedPet
	tool.RequiresHandle = false

	model.Parent = tool
	model:SetPrimaryPartCFrame(LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, -2))

	local scale = 1 + (age * 0.05) + (weight * 0.05)
	for _, part in ipairs(model:GetDescendants()) do
		if part:IsA("BasePart") then
			part.Size *= scale
		end
	end

	tool.Parent = LocalPlayer.Backpack
end)
