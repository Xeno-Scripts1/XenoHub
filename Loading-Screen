local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "FakeLoadingScreen"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = player:WaitForChild("PlayerGui")

-- ‚¨õ Black Gradient Background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
bg.BorderSizePixel = 0
bg.Parent = gui

local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Color3.fromRGB(15, 15, 30)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 0, 0)),
})
gradient.Rotation = 90
gradient.Parent = bg

-- üåü Drop shadow effect
local blur = Instance.new("BlurEffect")
blur.Size = 25
blur.Parent = game:GetService("Lighting")

-- üß™ Loading Container
local loadBox = Instance.new("Frame")
loadBox.Size = UDim2.new(0.4, 0, 0.05, 0)
loadBox.Position = UDim2.new(0.3, 0, 0.45, 0)
loadBox.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
loadBox.BorderSizePixel = 0
loadBox.Parent = bg

local loadCorner = Instance.new("UICorner")
loadCorner.CornerRadius = UDim.new(0, 10)
loadCorner.Parent = loadBox

-- ‚úÖ Loading Fill Bar
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
bar.BorderSizePixel = 0
bar.Parent = loadBox

local fillCorner = Instance.new("UICorner")
fillCorner.CornerRadius = UDim.new(0, 10)
fillCorner.Parent = bar

-- % Text Inside Bar
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(1, 0, 1, 0)
percent.BackgroundTransparency = 1
percent.Text = "0%"
percent.Font = Enum.Font.GothamBold
percent.TextColor3 = Color3.fromRGB(255, 255, 255)
percent.TextScaled = true
percent.TextStrokeTransparency = 0.4
percent.Parent = loadBox

-- üîî Recent Duplications Panel
local notifBox = Instance.new("Frame")
notifBox.Size = UDim2.new(0, 300, 0, 200)
notifBox.Position = UDim2.new(1, -310, 1, -220)
notifBox.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
notifBox.BackgroundTransparency = 0.1
notifBox.BorderSizePixel = 0
notifBox.Parent = bg

local notifCorner = Instance.new("UICorner")
notifCorner.CornerRadius = UDim.new(0, 8)
notifCorner.Parent = notifBox

local notifTitle = Instance.new("TextLabel")
notifTitle.Size = UDim2.new(1, -10, 0, 28)
notifTitle.Position = UDim2.new(0, 10, 0, 0)
notifTitle.BackgroundTransparency = 1
notifTitle.Font = Enum.Font.GothamBold
notifTitle.TextSize = 18
notifTitle.Text = "üì¶ Recent Duplications"
notifTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
notifTitle.TextXAlignment = Enum.TextXAlignment.Left
notifTitle.Parent = notifBox

local notifList = Instance.new("Frame")
notifList.Size = UDim2.new(1, -20, 1, -35)
notifList.Position = UDim2.new(0, 10, 0, 30)
notifList.BackgroundTransparency = 1
notifList.ClipsDescendants = true
notifList.Parent = notifBox

local layout = Instance.new("UIListLayout")
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Padding = UDim.new(0, 6)
layout.Parent = notifList

-- üß™ Notification Data
local usernames = {"XenoWarrior", "PixelPawsYT", "MagmaKid07", "Glitcher999", "SparkleNova", "Dupemaster", "PetFlexer", "TradeKing"}
local pets = {"Raccoon", "T-Rex", "Dragon Fly", "Mimic Octopus", "Kitsune", "Disco Bee", "Butterfly"}

-- üé¨ Notification Function with Animation
local function createNotif()
	local name = usernames[math.random(#usernames)]
	local pet = pets[math.random(#pets)]
	local amount = math.random(1, 15)

	local notif = Instance.new("TextLabel")
	notif.Size = UDim2.new(1, 0, 0, 24)
	notif.BackgroundTransparency = 0.15
	notif.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	notif.Text = name .. " duplicated " .. amount .. "x " .. pet
	notif.Font = Enum.Font.Gotham
	notif.TextSize = 16
	notif.TextXAlignment = Enum.TextXAlignment.Left
	notif.TextColor3 = Color3.fromRGB(0, 255, 180)
	notif.TextTransparency = 1
	notif.Parent = notifList

	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 6)
	corner.Parent = notif

	notif.Position = UDim2.new(0, 0, 0, 0)
	TweenService:Create(notif, TweenInfo.new(0.4), {TextTransparency = 0}):Play()

	task.delay(4.5, function()
		TweenService:Create(notif, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
		task.wait(0.4)
		notif:Destroy()
	end)
end

-- ‚è≥ 60-Second Loading Bar Animation
task.spawn(function()
	local totalTime = 60
	local steps = 100
	for i = 0, steps do
		local percentValue = i / steps
		bar:TweenSize(UDim2.new(percentValue, 0, 1, 0), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
		percent.Text = math.floor(percentValue * 100) .. "%"
		wait(totalTime / steps)
	end

	wait(1)
	gui:Destroy()
	blur:Destroy()
end)

-- üîÅ Notification Spawner
task.spawn(function()
	while gui and gui.Parent do
		createNotif()
		wait(math.random(3, 5))
	end
end)
